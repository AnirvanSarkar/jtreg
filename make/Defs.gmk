  TESTNG_HOME = /java/devtools/share/testng/testng-6.7
endif

ifndef TESTNG_JAR
  TESTNG_JAR = $(TESTNG_HOME)/other-jars/testng-6.7-dist.jar
endif

#----- Ant: see http://ant.apache.org/

