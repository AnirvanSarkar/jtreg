#----- JCov 2.0

ifndef JCOV_HOME
  JCOV_HOME = /java/re/jcov/2.0/promoted/latest/binaries/jcov_2.0/
endif

ifdef JCOV_HOME
  JCOV = $(JDK16HOME)/bin/java -jar $(JCOV_HOME)/lib/jcov.jar
